<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lead_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/lead_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_tm_indicator_48dp"/>

    <TextView
        android:id="@+id/lead_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingLeft="24dp"
        android:layout_toRightOf="@+id/lead_image"/>

    <TextView
        android:id="@+id/lead_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:paddingLeft="24dp"
        android:layout_toRightOf="@+id/lead_image"
        android:layout_below="@+id/lead_name"/>

    <TextView
        android:id="@+id/lead_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recruit"
        android:layout_toRightOf="@+id/lead_image"
        android:layout_below="@+id/lead_number"
        android:paddingLeft="24dp"/>

    <TextView
        android:id="@+id/follow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:text="1st Follow Up"/>

</RelativeLayout>
