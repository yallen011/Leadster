<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/grey">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:id="@+id/interview_progress_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/progress_title_interview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Interviews"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <FrameLayout
                        android:id="@+id/interview_framelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress_bar_interview"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:progress="50"
                            android:progressDrawable="@drawable/style_cicular" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/progress_percent_interview"
                                style="@style/PercentTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="50%" />

                            <TextView
                                android:id="@+id/progress_text_interview"
                                style="@style/ProgressCountTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/progress_percent_interview"
                                android:text="2/2 Interviews" />
                        </RelativeLayout>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/calls_progress_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/progress_title_calls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_calls"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <FrameLayout
                        android:id="@+id/calls_framelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress_bar_calls"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/style_cicular" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/progress_percent_call"
                                style="@style/PercentTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="80%" />

                            <TextView
                                android:id="@+id/progress_text_call"
                                style="@style/ProgressCountTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/progress_percent_call"
                                android:text="8/10 Calls" />
                        </RelativeLayout>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/parties_progress_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/progress_title_parties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parties"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <FrameLayout
                        android:id="@+id/parties_framelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progress_bar_parties"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/style_cicular" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/progress_percent_parties"
                                style="@style/PercentTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="30%" />

                            <TextView
                                android:id="@+id/progress_text_parties"
                                style="@style/ProgressCountTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/progress_percent_parties"
                                android:text="3/10 Parties" />
                        </RelativeLayout>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>