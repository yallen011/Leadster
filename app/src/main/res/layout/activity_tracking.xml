<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ubcma.leadster.activity.TrackingActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_followup_calls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_followup_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_followup_calls" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_recuits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_recuits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_recuit_leads" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_sells_leads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_sells_leads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sells_leads" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_interviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_interviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_interviews" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_sells_apts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_sells_apts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sells_apts" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>

</android.support.constraint.ConstraintLayout>
